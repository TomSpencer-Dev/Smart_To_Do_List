<!-- Main page to render header along with login or list partils -->
<!DOCTYPE html>
<html lang="en">

<!-- Import stylesheets, jquery, and fontawesome kit -->

<head>
  <title>Home Page</title>

  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
  <script src="https://kit.fontawesome.com/174bb300ca.js" crossorigin="anonymous"></script>

</head>

<body>

  <!-- Use ejs to create conditional statements to render views based on if user is logged in -->
  <%- include('partials/_header') %>
    <!-- If user is logged in, displays list view -->
    <% if(user){ %>
      <%- include('partials/_list') %>
        <!-- If user is not logged in, displays login form -->
        <% } else{ %>
          <%- include('partials/_login') %>
            <% } %>

              <!-- Import app.js -->
              <script defer src="/scripts/app.js"></script>
</body>

</html>